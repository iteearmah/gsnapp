<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ghanasoccernet" version="0.1.19">
  <name>GhanaSoccernet</name>
  <description>
    Ghana football, Ghana soccer, Ghana football news, scores, stats, and features from the Ghana's leading football website, GHANAsoccernet.com
  </description>
  <author email="iteearmah@gmail.com">
    Samuel Armah
  </author>
  <hook type="after_platform_add" src="scripts/android/afterPlatformAdd.js" />
  <platform name="android">
        <icon src="res/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
        <splash src="res/res-mipmap/mipmap-hdpi/splash.png" density="hdpi" />
        <splash src="res/res-mipmap/mipmap-ldpi/splash.png" density="ldpi" />
        <splash src="res/res-mipmap/mipmap-mdpi/splash.png" density="mdpi" />
        <splash src="res/res-mipmap/mipmap-xhdpi/splash.png" density="xhdpi" />
        <splash src="res/res-mipmap/mipmap-xxhdpi/splash.png" density="xxhdpi" />
        <splash src="res/res-mipmap/mipmap-xxxhdpi/splash.png" density="xxxhdpi" />
</platform>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
   
    <plugin name="onesignal-cordova-plugin"/>
    <plugin name="cordova-plugin-inappbrowser"/>
  <plugin name="cordova-plugin-network-information"/>
  <plugin name="cordova-plugin-x-toast"/>
  <plugin name="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git"/>

</widget>
