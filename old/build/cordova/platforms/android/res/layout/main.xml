    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="com.eclipsesource.tabris.js.LauncherActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eclipsesource.tabris.js.launcher.utils.view.LoadingIndicator
